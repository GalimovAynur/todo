<%= form_with model: @task, local: true do |form| %>
  <p>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %> <br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :done %>
    <%= form.check_box :done %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>